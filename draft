kubectl get job --all-namespaces -o json | jq -r '.items[] | select((.status.phase == "Running") and (.metadata.creationTimestamp | fromdateiso8601 > (now - 86400))) | .metadata.namespace + "/" + .metadata.name' | wc -l
kubectl get pods -n infra -o json | jq -r '.items[] | select((.status.phase == "Running") and (.metadata.creationTimestamp | fromdateiso8601 < (now - 86400))) | .metadata.name'
kubectl get pods,jobs -n infra -o json | jq -r '.items[] | select((.status.phase == "Running" or (.status.conditions[]? | .type == "Complete" and .status == "True")) and (.metadata.creationTimestamp | fromdateiso8601 < (now - 86400))) | .metadata.name '
  
